<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jk.dao.UserMapper" >
  <resultMap id="BaseResultMap" type="com.jk.entity.User" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="usercode" property="usercode" jdbcType="VARCHAR" />
    <result column="username" property="username" jdbcType="VARCHAR" />
    <result column="userimg" property="userimg" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="salt" property="salt" jdbcType="VARCHAR" />
    <result column="status" property="status" jdbcType="INTEGER" />
    <result column="vcolor" property="vcolor" jdbcType="VARCHAR" />
    <result column="createtime" property="createtime" jdbcType="DATE" />
  </resultMap>
  <insert id="insert" parameterType="com.jk.entity.User" >
    insert into sys_user_copy (usercode, username,userimg, password,status,vcolor)
    values (#{usercode,jdbcType=VARCHAR}, #{username,jdbcType=VARCHAR},#{userimg,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR},1,'#FFFFF')
  </insert>
  <update id="update">
    update sys_user_copy set status=0,vcolor='#FFFF00',createtime=#{createtime,jdbcType=DATE} where id=#{id}
  </update>
  <select id="login" resultType="User">
select * from sys_user_copy where usercode = #{usercode}
  </select>
  <select id="select" resultType="User">
    select * from sys_user_copy
  </select>
  <update id="updates">
    update sys_user_copy set status=1,vcolor='#FFFFF',createtime='2020-11-08' where id=#{id}
  </update>
</mapper>